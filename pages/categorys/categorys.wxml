<!--pages/categorys/categorys.wxml-->
<view class="cates">
    <!-- 搜索 -->
    <SearchInput></SearchInput>
    <view class="cate_container">
        <scroll-view class="menu_left" scroll-y>
            <view class="menu_item {{index==currentIndex?'active':''}}" wx:for="{{cateLeft}}" wx:key="*this"
            bindtap="handleItemTap" data-index="{{index}}"> {{item}}</view>
        </scroll-view>
        <scroll-view class="menu_right" scroll-y scroll-top="{{scrollTop}}">
           <view class="goods_group" wx:for="{{cateRight}}"
           wx:for-index="index1" wx:for-item="item1" >
               <view class="goods_title">
                   <text class="dilimeter">/</text>
                   {{ item1.cat_name }}
                   <text class="dilimeter">/</text>
                </view>
               <view class="goods_list">
                   <navigator wx:for="{{item1.children}}" url="/pages/goods_lists/goods_lists?cid={{item2.cat_id}}"
                   wx:key="cat_name" wx:for-item="item2" wx:for-index="index2">    
                      <image src="{{item2.cat_icon}}" mode="widthFix"/>
                      <view class="list_name"> {{item2.cat_name}}</view>
                   </navigator>  
            </view>
           </view>
        </scroll-view>
    </view>
</view>
  
