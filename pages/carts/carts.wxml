<!--pages/carts/carts.wxml-->
<!-- 收获地址 -->
<view class="address">
    <view wx:if="{{!address.userName}}" class="ad_btn">
        <button type="primary" plain bindtap="handleAddress">
            获取收货地址
        </button>
    </view>
    <view wx:else class="detail_ad">
        <view class="info">
           <view class="name">收件人：{{address.userName}}</view>
           <view class="dizhi">
            {{address.provinceName+address.cityName+address.countyName+address.detailInfo}}
           </view> 
        </view>
        <view class="tel">{{address.telNumber}}</view>
    </view>
</view>
<view wx:if="{{cartLists.length}}" class="cart_content">
    <view class="cart_title">购物车</view>
    <view class="cart_main" wx:for="{{cartLists}}" wx:key="add_time">
        <view class="cart_item">
            <view class="cart_check">
                <checkbox-group bindchange="handleCheckGoods" data-id="{{item.goods_id}}">
                  <checkbox checked="{{item.checked}}">
                  </checkbox>
                </checkbox-group>
            </view>
            <navigator class="cart_img">
                <image src="{{item.goods_small_logo}}" mode="widthFix"/>
            </navigator>
            <view class="cart_goods_info">
                <view class="goods_name">{{item.goods_name}}</view>
                <view class="goods_price_wrap">
                    <view class="goods_price">￥ {{item.goods_price}} </view>
                    <view class="cart_num">
                        <view class="num_edit" data-id="{{item.goods_id}}" bindtap="handleNumReduce">-</view>
                        <view class="num">{{item.num}}</view>
                        <view class="num_edit" data-id="{{item.goods_id}}" bindtap="handleNumAdd">+</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>

<view class="total">
    <view class="check_wrap_all">
        <checkbox-group bindchange="handleCheckAll">
            <checkbox checked="{{allChecked}}">
                全选
            </checkbox>
              
        </checkbox-group>
    </view>
    <view class="all_wrap">
        合计： <text class="totalPrice">￥ {{totalPrice}}</text>
        <view>包含运费</view>
    </view>
    <view class="pay" bindtap="handlePay">
        结算({{totalNum}})
    </view>
</view>
  