<!--components/Tabs/Tabs.wxml-->
<view class="tabs">
    <view class="tabs_title">
        <view  wx:for="{{tabs}}" wx:key="id"
        data-index="{{index}}" bindtap="handleTabItem" 
        class="tabs_item {{item.isActive?'active':''}}">
            {{item.name}}
        </view>
    </view>
    <view class="tabs_content"><slot></slot>
    </view>
</view>
  
